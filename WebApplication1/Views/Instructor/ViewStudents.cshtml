@model IEnumerable<WebApplication1.Models.Student>
<h1>View Student Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentPhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentDob)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentPhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentDob)
                </td>
                <td>
                    
                    @Html.ActionLink("ViewMap", "ViewMap", "Instructor",new { id = item.StudentId},new { })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class ="btn">
    <div class="btn1">
        @Html.ActionLink("Create Pdf", "CreatePdf", "Instructor")
    </div>
    <div class="btn1">
        @Html.ActionLink("SendEmail", "SendEmail", "Instructor")
    </div>
   </div> 
    @section Scripts {

        @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
        @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
        <script>
            $(document).ready(function () {
                $('.table').DataTable();
            });
        </script>
    }
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
          rel="stylesheet" />

    <style>
        .btn1 {
            background: white;
            border-color: lightgrey;
            border-radius: 4px;
            margin-top: 16px;
            padding:8px;
            float:left;
            margin-right:8px
        }

            .btn1:hover {
                background: #1c62c4;
                color: white;
            }
    </style>
